<%= form_for @customer do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <p>

    <%= f.label :address %>
    <%= f.text_field :address %>
    <p>

    <%= f.label :contact_name %>
    <%= f.text_field :contact_name %>
    <p>

    <%= f.label :phone_number %>
    <%= f.text_field :phone_number %>
    <p>

    <%= f.label :email %>
    <%= f.text_field :email %>
    <p>

    <%= f.submit %>
<% end %>
