<h1><%= render partial: "link_to_customer", locals: {object: @customer} %> Sales Orders</h1>
<%= render partial: "new_sales_order", locals: {object: @customer} %>
<table>
    <thead>
        <tr>
            <th>Sales Order#</th>
            <% unless @customer %>
                <th>Customer</th>
            <% end %>
        </tr>
    </thead>
    <tbody>
    <% @sales_orders.each do |s| %>
        <tr>
            <td><%= link_to s.sales_order_number, sales_order_path(s) %></td>
            <% unless @customer %>
                <td> <%= link_to s.customer.name, customer_path(s.customer) %> </td>
            <% end %>
            <td> <%= link_to "Delete Sales Order", sales_order_path(s), method: :delete, data: {confirm: "Are you sure?"} %></td>
        </tr>
    <% end %>
    </tbody>
</table>
