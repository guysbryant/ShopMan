<% if session[:login] %>
    <div class="field_with_errors login_fail">
        <%= "Could not log you in with that username and password" %>
    </div>
<% end %>
<h1>Login</h1>
<%= form_tag "/login" do %>
    <p>
        <%= label_tag "Username" %>
        <%= text_field_tag :username %>
    </p>
    <p>
        <%= label_tag "Password" %>
        <%= password_field_tag :password %>
    </p>
    <%= submit_tag "Login" %>
<% end %>
