<%= form_for @sales_order_line do |f| %>
    <%= f.label :product %>
    <%= f.collection_select :product_id, Product.all, :id, :name, prompt: true %>
    <p>

    <%= f.label :qty %>
    <%= f.text_field :qty %>
    <p>

    <%= f.label :price %>
    <%= f.text_field :price %>
    <p>

    <%= hidden_field_tag :sales_order_id, @sales_order.id %>
    <%= f.submit %>
<% end %>
