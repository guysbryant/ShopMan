<%= form_for @sales_order_line do |f| %>
    <%= f.label :product_id %>
    <%= f.collection_select :product_id, Product.all, :id, :name %>
    <p>

    <%= f.label :qty %>
    <%= f.text_field :qty %>
    <p>

    <%= f.label :price %>
    <%= f.text_field :price %>
    <p>

    <%= hidden_field_tag :sales_order_id, params[:sales_order_id] %>
    <%= f.submit %>
<% end %>
