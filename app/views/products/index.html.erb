<h1>All products</h1>
<table>
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Part Number</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        <%= link_to "Create New Product", new_product_path %>
        <% @products.each do |p| %>
            <tr>
                <td><%= link_to p.name, product_path(p) %></td>
                <td><%= p.part_number %></td>
                <td><%= p.description %></td>
            </tr>
        <% end %>
    </tbody>
</table>
